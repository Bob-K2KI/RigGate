<Window x:Class="WpfClient.Servers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Servers" Height="300" Width="500">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="66*"/>
                <ColumnDefinition Width="131*"/>
                <ColumnDefinition Width="295*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="176*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Left" Margin="5,7,0,7" Grid.Row="1"
                   Text="Server" VerticalAlignment="Center" Height="16" Width="33"/>
            <TextBlock HorizontalAlignment="Left" Margin="5,7,0,7" Grid.Row="2"
                   Text="Port" VerticalAlignment="Center" Height="16" Width="33"/>

            <TextBox Name="ServerTb" Grid.Column="1" Grid.Row="1"/>
            <TextBox Name="PortTb" Grid.Column="1" Grid.Row="2"/>

        </Grid>
    </StackPanel>
</Window>
